            android:id="@+id/btn14"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text="上一页"/>  
                                <Button   
            android:id="@+id/btn15"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text="下一页"/>  

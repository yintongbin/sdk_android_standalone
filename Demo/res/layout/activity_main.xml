            android:id="@+id/btn_"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text="图片分享"/>  
                  
                <Button   
            android:id="@+id/btn6"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text="缩略图分享"/>  
                <Button   
            android:id="@+id/btn7"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text="推荐游戏"/>  
                <Button   
            android:id="@+id/btn9"
        android:layout_width="wrap_content"  
